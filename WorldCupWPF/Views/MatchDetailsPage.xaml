<Page x:Class="WorldCupWPF.Views.MatchDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local = "clr-namespace:WorldCupWPF" 
      xmlns:p = "clr-namespace:WorldCupWPF.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchDetailsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Statistics Description Column -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20">
            <Label Content="{x:Static p:Resources.lblStatistics}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="{x:Static p:Resources.lblWins}" FontSize="20" Margin="0,5"/>
            <Label Content="{x:Static p:Resources.lblLosses}" FontSize="20" Margin="0,5"/>
            <Label Content="{x:Static p:Resources.lblDraws}" FontSize="20" Margin="0,5"/>
            <Label Content="{x:Static p:Resources.lblGoalsScored}" FontSize="20" Margin="0,5"/>
            <Label Content="{x:Static p:Resources.lblGoalsTaken}" FontSize="20" Margin="0,5"/>
            <Label Content="{x:Static p:Resources.lblGoalsDiff}" FontSize="20" Margin="0,5"/>
        </StackPanel>

        <!-- Home Team Column -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
            <Label Content="{Binding HomeTeamName}" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="{Binding HomeWins}" HorizontalAlignment="Center" Foreground="LawnGreen" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding HomeLosses}" HorizontalAlignment="Center" Foreground="IndianRed" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding HomeDraws}" HorizontalAlignment="Center" Foreground="DarkSlateGray" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding HomeGoalsScored}" HorizontalAlignment="Center" Foreground="LawnGreen" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding HomeGoalsTaken}" HorizontalAlignment="Center" Foreground="IndianRed" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding HomeGoalDifference}" HorizontalAlignment="Center" Foreground="MediumPurple" FontSize="20" Margin="0,5"/>
        </StackPanel>

        <!-- Opposing Team Column -->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="20">
            <Label Content="{Binding OpponentTeamName}" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="{Binding OpponentWins}" HorizontalAlignment="Center" Foreground="LawnGreen" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding OpponentLosses}" HorizontalAlignment="Center" Foreground="IndianRed" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding OpponentDraws}" HorizontalAlignment="Center" Foreground="DarkSlateGray" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding OpponentGoalsScored}" HorizontalAlignment="Center" Foreground="LawnGreen" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding OpponentGoalsTaken}" HorizontalAlignment="Center" Foreground="IndianRed" FontSize="20" Margin="0,5"/>
            <Label Content="{Binding OpponentGoalDifference}" HorizontalAlignment="Center" Foreground="MediumPurple" FontSize="20" Margin="0,5"/>
        </StackPanel>

        <Button x:Name="btnReturn" Content="{x:Static p:Resources.btnReturnToMatch}" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" Height="40" Width="120" Margin="0,20" Click="btnReturn_Click" />
    </Grid>
</Page>
