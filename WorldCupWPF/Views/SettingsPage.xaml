<Page x:Class="WorldCupWPF.Views.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local = "clr-namespace:WorldCupWPF" 
        xmlns:p = "clr-namespace:WorldCupWPF.Properties"
        Title="Settings" Height="450" Width="800">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>
    <Grid RenderTransformOrigin="0.499,0.489">
        <Label Content="{x:Static p:Resources.lblEditSettings}" HorizontalAlignment="Left" Margin="207,48,0,0" VerticalAlignment="Top" FontSize="24"/>
        
        <ComboBox SelectedIndex="{Binding SelectedGenderIndex}" HorizontalAlignment="Left" Margin="340,100,0,0" VerticalAlignment="Top" Width="120" Height="32">
            <ComboBoxItem>Men</ComboBoxItem>
            <ComboBoxItem>Women</ComboBoxItem>
        </ComboBox>
        
        <ComboBox SelectedIndex="{Binding SelectedLanguageIndex}" HorizontalAlignment="Left" Margin="340,146,0,0" VerticalAlignment="Top" Width="120" Height="32">
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>Croatian</ComboBoxItem>
        </ComboBox>
        
        <ComboBox SelectedIndex="{Binding SelectedResolutionIndex}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="32" Margin="340,197,0,0">
            <ComboBoxItem>Fullscreen</ComboBoxItem>
            <ComboBoxItem>w1920_h1080</ComboBoxItem>
            <ComboBoxItem>w1280_h720</ComboBoxItem>
            <ComboBoxItem>w900_h720</ComboBoxItem>
        </ComboBox>
        
        <Label Content="{x:Static p:Resources.lblLeague}" HorizontalAlignment="Left" Margin="224,95,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="{x:Static p:Resources.lblLanguage}" HorizontalAlignment="Left" Margin="224,144,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="{x:Static p:Resources.lblResolution}" HorizontalAlignment="Left" Margin="224,195,0,0" VerticalAlignment="Top" FontSize="20"/>

        <Button Content="{x:Static p:Resources.btnSave}" Command="{Binding SaveCommand}" HorizontalAlignment="Left" Margin="224,285,0,0" VerticalAlignment="Top" Height="36" Width="69"/>
        <Button Content="{x:Static p:Resources.btnCancel}" Command="{Binding CancelCommand}" HorizontalAlignment="Left" Margin="391,285,0,0" VerticalAlignment="Top" Height="36" Width="69"/>
        
        <Image HorizontalAlignment="Right" Height="219" Margin="0,69,36,0" VerticalAlignment="Top" Width="219" Source="/Views/Gear.png">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.383"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        
        <Label Content="{Binding ValidationMessage}" 
               Visibility="{Binding IsValidationVisible}"
               HorizontalAlignment="Left" Margin="224,237,0,0" VerticalAlignment="Top" FontSize="16" Foreground="DarkRed"/>

    </Grid>
</Page>
