<Window x:Class="WorldCupWPF.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF.Windows"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.499,0.489">
        <Label x:Name="lblEditSettings" Content="Edit Settings" HorizontalAlignment="Left" Margin="207,48,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="cmbGender" HorizontalAlignment="Left" Margin="340,100,0,0" VerticalAlignment="Top" Width="120" Height="32">
            <ComboBoxItem Name="BoxItemMen">Men</ComboBoxItem>
            <ComboBoxItem Name="BoxItemWomen">Women</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="cmbLanguage" HorizontalAlignment="Left" Margin="340,146,0,0" VerticalAlignment="Top" Width="120" Height="32">
            <ComboBoxItem Name="BoxItemENG">English</ComboBoxItem>
            <ComboBoxItem Name="BoxItemCRO">Croatian</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="cmbResolution" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="32" Margin="340,197,0,0">
            <ComboBoxItem Name="BoxItemFullScreen">Fullscreen</ComboBoxItem>
            <ComboBoxItem Name="BoxItemFullHD">w1920_h1080</ComboBoxItem>
            <ComboBoxItem Name="BoxItemMedium">w1280_h720</ComboBoxItem>
            <ComboBoxItem Name="BoxItemSmall">w900_h720</ComboBoxItem>
        </ComboBox>
        <Label Content="League:" HorizontalAlignment="Left" Margin="224,95,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Language:" HorizontalAlignment="Left" Margin="224,144,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Resolution:" HorizontalAlignment="Left" Margin="224,195,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="224,285,0,0" VerticalAlignment="Top" Height="36" Width="69" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="391,285,0,0" VerticalAlignment="Top" Height="36" Width="69" Click="btnCancel_Click"/>
        <Image HorizontalAlignment="Right" Height="219" Margin="0,69,36,0" VerticalAlignment="Top" Width="219" Source="/Windows/Gear.png">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.383"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="lblWarning" Content="Please set all settings before saving!" HorizontalAlignment="Left" Margin="224,237,0,0" VerticalAlignment="Top" FontSize="16" Foreground="DarkRed" Visibility="Hidden"/>

    </Grid>
</Window>
