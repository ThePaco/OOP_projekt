<Window x:Class="WorldCupWPF.Windows.PlayerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF.Windows"
        mc:Ignorable="d"
        Title="PlayerDetailsWindow" Height="400" Width="300">
    
    <Window.Resources>
        <!-- Shared animation style that can be applied to any FrameworkElement -->
        <Style x:Key="FlyInStyle" TargetType="FrameworkElement">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                           From="-400" To="0" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Label x:Name="lblName" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" FontSize="16" Content="Ime"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblKapetan" HorizontalAlignment="Left" Margin="174,132,0,0" VerticalAlignment="Top" FontSize="16" Content="⭐" Visibility="Hidden"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblShirtNumber" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" FontSize="16" Content="Broj"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblPosition" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" FontSize="16" Content="Pozicija"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblGoals" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" FontSize="16" Content="Golovi 🥅"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblYellow" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" FontSize="16" Content="Zuti 🟨"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="imgIcon" HorizontalAlignment="Left" Height="100" Margin="98,29,0,0" VerticalAlignment="Top" Width="100"
               Style="{StaticResource FlyInStyle}">
            <Image.RenderTransform>
                <TranslateTransform/>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Center" Margin="0,315,0,0" VerticalAlignment="Top" Height="36" Width="69" Click="btnOK_Click"
                Style="{StaticResource FlyInStyle}">
            <Button.RenderTransform>
                <TranslateTransform/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
