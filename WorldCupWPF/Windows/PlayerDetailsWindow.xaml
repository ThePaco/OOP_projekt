<Window x:Class="WorldCupWPF.Windows.PlayerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF.Windows"
        mc:Ignorable="d"
        Title="PlayerDetailsWindow" Height="400" Width="300" ResizeMode="CanMinimize">

    <Window.Resources>
        <Style x:Key="FlyInStyle" TargetType="FrameworkElement">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                           From="-400" To="0" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Label x:Name="lblName" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding Player.Name}"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblKapetan" HorizontalAlignment="Left" Margin="199,129,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding CaptainStar}"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblShirtNumber" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding Player.ShirtNumber}"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblPosition" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding Player.Position}" 
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblGoals" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding Goals}"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="lblYellow" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" FontSize="16" Content="{Binding YellowCards}"
               Style="{StaticResource FlyInStyle}">
            <Label.RenderTransform>
                <TranslateTransform/>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="imgIcon" HorizontalAlignment="Left" Height="100" Margin="105,29,0,0" VerticalAlignment="Top" Width="100" Source="{Binding ImagePath}"
               Style="{StaticResource FlyInStyle}">
            <Image.RenderTransform>
                <TranslateTransform/>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Center" Margin="0,315,0,0" VerticalAlignment="Top" Height="36" Width="69" Click="btnOK_Click"
                Style="{StaticResource FlyInStyle}">
            <Button.RenderTransform>
                <TranslateTransform/>
            </Button.RenderTransform>
        </Button>
        <Label Content="#" HorizontalAlignment="Left" Margin="176,161,0,0" VerticalAlignment="Top"/>
        <Label Content="🥅" HorizontalAlignment="Left" Margin="171,223,0,0" VerticalAlignment="Top"/>
        <Label Content="🟨" HorizontalAlignment="Left" Margin="175,254,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
